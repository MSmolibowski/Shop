<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shop.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Shop.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
</head>

@await Html.PartialAsync("_ToastPartial")
<body>

    <!-- Top Navigation/Header -->
    <header class="bg-dark text-white px-4 py-3 shadow-sm">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h5 mb-0">🛒 Shop Dashboard</h1>
            <span class="small">Welcome!</span>
        </div>
    </header>

    <div class="d-flex min-vh-100">

        <!-- Sidebar -->
        <div class="d-flex flex-column p-3 bg-light border-end" style="width: 250px;">
            @* <h4 class="fw-bold mb-4">Dashboard</h4> *@

            <ul class="nav flex-column gap-2">
                <li class="nav-item">
                    <a class="btn btn-primary w-100" asp-controller="Category" asp-action="Index">
                        Manage Categories
                    </a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-secondary w-100" asp-controller="Product" asp-action="Index">
                        Manage Products
                    </a>
                </li>
            </ul>
        </div>

        <!-- Main content area -->
        <main class="flex-grow-1 p-4">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Shop.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/toast.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
